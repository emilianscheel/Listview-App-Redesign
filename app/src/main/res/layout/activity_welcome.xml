<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?white"
    tools:context=".EinfÃ¼hrung.WelcomeActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/WelcomeActivity_nextButton">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/icon_app"/>

        <TextView
                android:id="@+id/WelcomeActivity_versionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Version 15.1"
                android:textColor="#979797"
                android:textSize="18dp"
                android:fontFamily="@font/sf_bold"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/WelcomeActivity_nextButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_button_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Los geht's"
                android:fontFamily="@font/sf_bold"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>