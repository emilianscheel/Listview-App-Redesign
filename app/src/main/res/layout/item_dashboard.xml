<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    android:paddingBottom="15dp"
    android:paddingTop="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="?backgroundSecondary"
    app:carbon_cornerRadius="@dimen/cornerRadius"
    app:carbon_elevation="10dp"
    app:carbon_elevationShadowColor="?shadowColor"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemDashboard_add"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/icon_plus"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?foregroundSecondary" />

    <LinearLayout
        android:id="@+id/itemDashboard_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/itemDashboard_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_bold"
            android:text="5 EintrÃ¤ge"
            android:textColor="?colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_bold"
            android:text="Einkaufsliste"
            android:textColor="?foregroundTitle"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDashboard_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_bold"
            android:text="Produkte"
            android:textColor="?foregroundSecondary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_accent"
            android:backgroundTint="?backgroundLight"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/itemDashboard_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_bold"
                android:text="16. Juni"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</carbon.widget.ConstraintLayout>