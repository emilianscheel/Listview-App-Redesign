<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="12dp"
    android:paddingBottom="25dp"
    android:paddingTop="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    android:background="?backgroundSecondary"
    app:carbon_cornerRadius="@dimen/cornerRadius"
    app:carbon_elevationShadowColor="?shadowColor"
    app:carbon_elevation="10dp">

    <ImageView
        android:id="@+id/itemType_add"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/icon_plus"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?foregroundSecondary" />

    <LinearLayout
        android:id="@+id/itemType_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/itemType_nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_bold"
                    android:text="Einkaufsliste"
                    android:textColor="?foregroundTitle"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            <ImageView
                    android:id="@+id/itemType_selectedIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_check"
                    android:visibility="gone"
                    app:tint="?colorPrimary"
                    android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/itemType_subtitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_bold"
            android:text="Produkte"
            android:textColor="?foregroundSecondary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_accent"
            android:backgroundTint="?backgroundLight"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_bold"
                android:text="AuswÃ¤hlen"
                android:textColor="?foregroundPrimary"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</carbon.widget.ConstraintLayout>