<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?backgroundPrimary"
        tools:context=".Einführung.IntroHelpActivity">

    <carbon.widget.LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <carbon.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hilfe"
                android:fontFamily="@font/sf_black"
                android:gravity="center"
                android:textColor="?foregroundTitle"
                android:textSize="32dp"/>

        <carbon.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unter den Hilfeartikeln in der App suchen, um neues zu erfahren."
                android:fontFamily="@font/sf_bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/carbon_grid8"
                android:textColor="?foregroundTitle"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

    </carbon.widget.LinearLayout>

    <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout5">

        <carbon.widget.LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?colorPrimary"
                app:carbon_cornerRadius="25dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:carbon_elevationShadowColor="?shadowColor"
                app:carbon_elevation="10dp"
                app:layout_constraintTop_toTopOf="@+id/DashboardAct_settingsButton"
                app:layout_constraintEnd_toEndOf="parent">

            <carbon.widget.ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_info"
                    app:carbon_tint="@color/white"/>

        </carbon.widget.LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_bold"
                    android:gravity="center"
                    android:textColor="?foregroundTitle"
                    android:text="Hier in der \n„Mediathek“\ntippen."/>

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:rotation="-90"
                    android:layout_marginRight="50dp"
                    android:tint="?foregroundTitle"
                    android:src="@drawable/icon_arrow_right"/>

        </LinearLayout>

    </carbon.widget.LinearLayout>

    <LinearLayout
            android:id="@+id/IntroHelpActivity_nextButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_button_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Weiter"
                android:fontFamily="@font/sf_bold"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>